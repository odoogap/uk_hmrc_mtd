<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="config_mtd_server_ip" model="ir.config_parameter">
            <field name="key">mtd.server</field>
            <field name="value">www.odoomtd.co.uk</field>
        </record>

        <record id="config_mtd_server_port" model="ir.config_parameter">
            <field name="key">mtd.port</field>
            <field name="value">443</field>
        </record>

        <record id="config_mtd_server_db" model="ir.config_parameter">
            <field name="key">mtd.db</field>
            <field name="value">v12_odoo</field>
        </record>

        <record id="box1_formula" model="ir.config_parameter">
            <field name="key">mtd.box1_formula</field>
            <field name="value">sum([vat_ST0,vat_ST1,vat_ST2,vat_ST11]) + fuel_vat + bad_vat</field>
        </record>

        <record id="box2_formula" model="ir.config_parameter">
            <field name="key">mtd.box2_formula</field>
            <field name="value">sum([vat_PT8M])</field>
        </record>

        <record id="box4_formula" model="ir.config_parameter">
            <field name="key">mtd.box4_formula</field>
            <field name="value">sum([vat_PT11,vat_PT5,vat_PT2,vat_PT1,vat_PT0]) + sum([vat_credit_PT8R,vat_debit_PT8R])</field>
        </record>

        <record id="box6_formula" model="ir.config_parameter">
            <field name="key">mtd.box6_formula</field>
            <field name="value">sum([net_ST0,net_ST1,net_ST2,net_ST11]) + sum([net_ST4]) + fuel_net + bad_net</field>
        </record>

        <record id="box7_formula" model="ir.config_parameter">
            <field name="key">mtd.box7_formula</field>
            <field name="value">sum([net_PT11,net_PT0,net_PT1,net_PT2,net_PT5]) + sum([net_PT7,net_PT8])</field>
        </record>
        <record id="box8_formula" model="ir.config_parameter">
            <field name="key">mtd.box8_formula</field>
            <field name="value">sum([net_ST4])</field>
        </record>

        <record id="box9_formula" model="ir.config_parameter">
            <field name="key">mtd.box9_formula</field>
            <field name="value">sum([net_PT7, net_PT8])</field>
        </record>
    </data>
</odoo>
