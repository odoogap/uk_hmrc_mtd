<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="invoice_tree" model="ir.ui.view">
        <field name="name">account.invoice.tree</field>
        <field name="model">account.invoice</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">mtd_date > date_invoice</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="after">
                <field name="mtd_date" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='origin']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="after">
                <field name="mtd_date" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='date_due']" position="after">
                <field name="net_amount_total" string="Net" sum="Net Total"/>
                <field name="vat_amount_total" string="VAT" sum="VAT Total"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_supplier_tree" model="ir.ui.view">
        <field name="name">account.invoice.tree</field>
        <field name="model">account.invoice</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">mtd_date > date_invoice</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="after">
                <field name="mtd_date" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='reference']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='origin']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="after">
                <field name="mtd_date" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='date_due']" position="after">
                <field name="net_amount_total" string="Net" sum="Net Total"/>
                <field name="vat_amount_total" string="VAT" sum="VAT Total"/>
            </xpath>
        </field>
    </record>


    <record id="view_mtd_account_invoice_search" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="arch" type="xml">
            <search string="due_invoices">
                <filter name='mtd_due_invoice' string="mtd due" domain="[('mtd_date', '>', '')]"/>
            </search>
        </field>
    </record>
</odoo>
