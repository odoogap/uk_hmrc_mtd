<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_config_settings" model="ir.ui.view">
        <field name="name">Mtd Settings</field>
        <field name="model">account.config.settings</field>
        <field name="inherit_id" ref="account.view_account_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//separator[@name='analytic_account']" position="before">
                <group string="HMRC MTD">
                    <div>
                        <div>
                            <label string="Login" for="mtd_login" class="col-md-3 o_light_label"/>
                            <field name="mtd_login" class="oe_inline"/>
                        </div>
                        <div>
                            <label string="Password" for="mtd_password" class="col-md-3 o_light_label"/>
                            <field name="mtd_password" class="oe_inline"/>
                        </div>
                        <div>
                            <label string="Sandbox" for="is_sandbox" class="col-md-3 o_light_label"/>
                            <field name="is_sandbox" class="oe_inline"/>
                        </div>
                        <div class="btn-group" role="group">
                            <button attrs="{'invisible': [('mtd_login', '=', False), ('mtd_password','=',False)]}" string="Authorize" name='get_authorization' type="object" class="btn-primary"/>
                            <button attrs="{'invisible': [('mtd_login', '=', False), ('mtd_password','=',False)]}" string="Formula" name='vat_formula' type="object" class="btn-primary"/>
                        </div>
                    </div>
                </group>
                <group>
                    <div>
                        <div>
                            <label string="Debit account" for="fuel_debit_account_id" class="col-md-3 o_light_label"/>
                            <field name="fuel_debit_account_id" class="oe_inline"/>
                        </div>
                        <div>
                            <label string="Credit account" for="fuel_credit_account_id" class="col-md-3 o_light_label"/>
                            <field name="fuel_credit_account_id" class="oe_inline"/>
                        </div>
                        <div>
                            <label string="Period" for="submission_period" class="col-md-3 o_light_label"/>
                            <field name="submission_period" class="oe_inline"/>
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
