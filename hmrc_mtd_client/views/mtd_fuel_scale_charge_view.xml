<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_fuel_scale_charge_form" model="ir.actions.act_window">
        <field name="name">Fuel scale charge</field>
        <field name="res_model">mtd.fuel.scale.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="fuel_scale_charge_form_wizard" model="ir.ui.view">
        <field name="name">fuel.scale.charge.form.view</field>
        <field name="model">mtd.fuel.scale.wizard</field>
        <field name="arch" type="xml">
        <form>
            <group>
                <group>
                    <field name="co2_band"/>
                    <field name="amount"/>
                    <field name="adjustment_type"/>
                </group>
                <group>
                    <field name="tax_id" widget="selection"/>
                </group>
                <group string="Accounts">
                    <field name="debit_account_id"/>
                    <field name="credit_account_id"/>
                </group>
                <group string="Options">
                    <field name="journal_id"/>
                    <field name="date"/>
                </group>
            </group>
            <footer>
              <div attrs="{'invisible': [('adjustment_type', '=', 'credit')]}">
                <button name="create_move_debit" string="Create and post move" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-secondary" special="cancel" />
              </div>
              <div attrs="{'invisible': [('adjustment_type', '!=', 'credit')]}">
                <button name="create_move_credit" string="Create and post move" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-secondary" special="cancel" />
              </div>
            </footer>
        </form>
        </field>
    </record>
</odoo>